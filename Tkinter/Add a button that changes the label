import tkinter as tk

root = tk.Tk()
root.title("Calculator — Session 1")
root.geometry("320x200")

header = tk.Label(root, text="Calculator (Session 1)", font=("Arial", 18))
header.pack(pady=20)

def say_hello():
    header.config(text="Hello — GUI is working!")

btn = tk.Button(root, text="Click me", command=say_hello)
btn.pack(pady=10)

root.mainloop()
