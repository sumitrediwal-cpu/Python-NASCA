import tkinter as tk

# Create window
root = tk.Tk()
root.title("Simple Calculator")
root.geometry("300x350")

# Entry field
entry = tk.Entry(root, font=("Arial", 20), justify="right")
entry.grid(row=0, column=0, columnspan=4, padx=10, pady=10, ipady=8)

# Functions
def append_char(ch):
    entry.insert(tk.END, str(ch))

def clear_entry():
    entry.delete(0, tk.END)

def backspace():
    s = entry.get()
    if s:
        entry.delete(len(s)-1, tk.END)

def calculate():
    try:
        expr = entry.get()
        result = eval(expr)   # simple evaluation
        entry.delete(0, tk.END)
        entry.insert(0, result)
    except:
        entry.delete(0, tk.END)
        entry.insert(0, "ERROR")

# Buttons (digits and operators)
buttons = [
    ('7',1,0), ('8',1,1), ('9',1,2), ('/',1,3),
    ('4',2,0), ('5',2,1), ('6',2,2), ('*',2,3),
    ('1',3,0), ('2',3,1), ('3',3,2), ('-',3,3),
    ('0',4,0), ('.',4,1), ('+',4,2), ('=',4,3),
]

for (text,r,c) in buttons:
    if text == '=':
        tk.Button(root, text=text, width=6, height=2, command=calculate).grid(row=r, column=c, padx=5, pady=5)
    else:
        tk.Button(root, text=text, width=6, height=2,
                  command=lambda t=text: append_char(t)).grid(row=r, column=c, padx=5, pady=5)

# Extra buttons
tk.Button(root, text="C", width=6, height=2, command=clear_entry).grid(row=5, column=0, padx=5, pady=10)
tk.Button(root, text="‚Üê", width=6, height=2, command=backspace).grid(row=5, column=1, padx=5, pady=10)

root.mainloop()
